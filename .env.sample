# .env.sample - Copy this to .env and update with your actual values

# ========================================
# MASTER ACCOUNT CONFIGURATION
# ========================================
MASTER_API_KEY=your_master_api_key_here
MASTER_API_SECRET=your_master_api_secret_here
MASTER_ACCESS_TOKEN=your_master_access_token_here
MASTER_USER_ID=your_master_user_id_here

# ========================================
# FOLLOWER ACCOUNTS CONFIGURATION
# ========================================
# Set the number of follower accounts
FOLLOWER_COUNT=2

# Follower Account 1
FOLLOWER_1_API_KEY=your_follower_1_api_key_here
FOLLOWER_1_API_SECRET=your_follower_1_api_secret_here
FOLLOWER_1_ACCESS_TOKEN=your_follower_1_access_token_here
FOLLOWER_1_USER_ID=your_follower_1_user_id_here
FOLLOWER_1_MULTIPLIER=1.0
FOLLOWER_1_MAX_POSITION=1000
FOLLOWER_1_ENABLED=True

# Follower 1 - Segment-Specific Configuration (Optional)
FOLLOWER_1_NSE_MULTIPLIER=1.0      # NSE Equity multiplier
FOLLOWER_1_BSE_MULTIPLIER=1.0      # BSE Equity multiplier
FOLLOWER_1_NFO_MULTIPLIER=0.5      # NSE F&O multiplier (lower due to leverage)
FOLLOWER_1_MCX_MULTIPLIER=0.2      # Commodity multiplier (much lower due to high value)
FOLLOWER_1_BFO_MULTIPLIER=0.5      # BSE F&O multiplier
FOLLOWER_1_CDS_MULTIPLIER=1.0      # Currency multiplier

FOLLOWER_1_NSE_LIMIT=1000          # NSE Equity position limit
FOLLOWER_1_BSE_LIMIT=1000          # BSE Equity position limit
FOLLOWER_1_NFO_LIMIT=500           # NSE F&O position limit
FOLLOWER_1_MCX_LIMIT=200           # Commodity position limit
FOLLOWER_1_BFO_LIMIT=500           # BSE F&O position limit
FOLLOWER_1_CDS_LIMIT=1000          # Currency position limit

# Follower 1 - Enabled Segments (comma-separated)
FOLLOWER_1_ENABLED_SEGMENTS=NSE,BSE,NFO,MCX,BFO,CDS

# Follower Account 2
FOLLOWER_2_API_KEY=your_follower_2_api_key_here
FOLLOWER_2_API_SECRET=your_follower_2_api_secret_here
FOLLOWER_2_ACCESS_TOKEN=your_follower_2_access_token_here
FOLLOWER_2_USER_ID=your_follower_2_user_id_here
FOLLOWER_2_MULTIPLIER=0.5
FOLLOWER_2_MAX_POSITION=500
FOLLOWER_2_ENABLED=True

# ========================================
# SYSTEM CONFIGURATION
# ========================================
# Check interval in seconds (how often to check for updates)
CHECK_INTERVAL=1

# Maximum retry attempts for failed operations
MAX_RETRIES=3

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Paper trading mode (True = simulate trades, False = real trades)
PAPER_TRADING=True

# Maximum number of trades per day per follower account
MAX_DAILY_TRADES=100

# Enable risk management features
RISK_MANAGEMENT=True

# ========================================
# SECURITY CONFIGURATION (Optional)
# ========================================
# Encryption key for sensitive data (generate using: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
# ENCRYPTION_KEY=your_encryption_key_here

# ========================================
# NOTIFICATION SETTINGS
# ========================================

# WhatsApp Notifications (via Twilio)
WHATSAPP_ENABLED=False
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
WHATSAPP_TO=whatsapp:+919876543210

# Telegram Notifications
TELEGRAM_ENABLED=False
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_chat_id

# Email Notifications
EMAIL_ENABLED=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=notifications@yourcompany.com

# Discord Notifications (Optional)
DISCORD_ENABLED=False
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
